{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "strict": false,
        "target": "es5",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "outDir": "./dist",
        "declarationDir": "dist/types",
        "typeRoots": [
          "node_modules/@types"
        ]
      },
    "include": ["src/**/*.ts"]
  }